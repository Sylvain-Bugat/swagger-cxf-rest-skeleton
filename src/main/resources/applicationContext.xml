<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:cxf="http://cxf.apache.org/core"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<context:component-scan base-package="com.github.sbugat.samplerest" />

	<!-- this scans the classes for resources -->
	<bean id="swaggerConfig" class="io.swagger.jaxrs.config.BeanConfig">
		<property name="resourcePackage" value="com.github.sbugat.samplerest.resource"/>
		<property name="version" value="1.0.0"/>
		<property name="host" value="localhost:8080"/>
		<property name="basePath" value="/api"/>
		<property name="title" value="Swagger Sample"/>
		<property name="description" value="This is a sample API."/>
		<property name="contact" value="none"/>
		<property name="license" value="Apache 2.0"/>
		<property name="licenseUrl" value="http://www.apache.org/licenses/LICENSE-2.0.html"/>
		<property name="scan" value="true"/>
	</bean>
</beans>
